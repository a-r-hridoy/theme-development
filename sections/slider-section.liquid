<section class="feature-section">
  <div class="container">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.description }}</p>
    <div class="features">
      {% for feature in section.settings.features %}
        <div class="feature">
          <h3>{{ feature.feature }}</h3>
        <!-- Add any additional styling or markup for features -->
        </div>
      {% endfor %}
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Feature Section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Our Features"
      }, {
        "type": "textarea",
        "id": "description",
        "label": "Section Description",
        "default": "Explore our amazing features!"
      }, {
        "type": "link_list",
        "id": "features",
        "label": "Features",
        "max_items": 4,
        "itemType": {
          "type": "text",
          "id": "feature",
          "label": "Feature"
        }
      }
    ]
  }

{% endschema %}