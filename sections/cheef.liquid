<section class="shefs pt_125 xs_pt_90">
  <div class="container">
    <div class="row">
      <div class="col-xl-8 m-auto wow fadeInUp">
        <div class="section_heading mb_25">
          <h2>{{ section.settings.section_title }}</h2>
        </div>
      </div>
    </div>
    <div class="row">
      {% for block in section.blocks %}
        <div class="col-xl-3 col-sm-6 col-lg-4 wow fadeInUp">
          <div class="single_chef">
            <a href="chefs_details.html" class="single_chef_img">
              <img
                src="{{ block.settings.chef_img | img_url: 'original' }}"
                alt="chef_img"
                width="auto"
                height="auto"
              >
              <span>{{ block.settings.chef_title }}</span>
            </a>
            <div class="single_chef_text">
              <a class="title" href="chefs_details.html">{{ block.settings.chef_name }}</a>
              <ul>
                <li>
                  <a class="facebook" href="#"><i class="fab fa-facebook-f"></i></a>
                </li>
                <li>
                  <a class="twitter" href="#"><i class="fab fa-twitter"></i></a>
                </li>
                <li>
                  <a class="linkedin" href="#"><i class="fab fa-linkedin-in"></i></a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      {% endfor %}
      <div class="col-12 text-center mt_60 wow fadeInUp">
        <a class="common_btn" href="{{ section.settings.btn_url }}">
          <span class="icon">
            <img
              src="{{ section.settings.veiw_icon | img_url: 'original' }}"
              alt="icon"
              width="auto"
              height="auto"
            >
          </span>
          {{ section.settings.view_more_btn }}
        </a>
      </div>
    </div>
  </div>
</section>
<!--
  ==========================
      CHEFS END
  ===========================
-->

{% schema %}
{
  "name": "Our Cef",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Meet Our special Chefs "
    },
     {
          "type": "image_picker",
          "id": "veiw_icon",
          "label": "icon"
        },
     {
      "type": "text",
      "id": "view_more_btn",
      "label": "Button label",
      "default": " View All Chef"
    },
    {
        "type": "url",
      "id": "btn_url",
      "label": "Button link"
    }
  ],
  "blocks": [
    {
      "type":"our_chef",
      "name": "Chef Add",
      "settings":[
        {
          "type": "image_picker",
          "id": "chef_img",
          "label": "Cheef Img"
        },
         {
          "type": "text",
          "id": "chef_title",
          "label": "Chef Title",
           "default": "Title"
        },
    {
      "type": "text",
      "id": "chef_name",
      "label": "Chef Name",
      "default": "Chef Name"
    }
      ]

    }
  ],
  "presets":[
    {
      "name": "Our Chef"
    }
  ]

}
{% endschema %}
