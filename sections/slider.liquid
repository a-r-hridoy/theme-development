<!-- slideshow-section.liquid -->

<section class="slideshow-section">
  <div class="container">
    <h2>{{ section.settings.section_title }}</h2>
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <img
              src="{{ block.settings.slide_image | img_url: 'large' }}"
              alt="{{ block.settings.slide_title }}"
              width="100%"
              height="100%">
            <div class="slide-content">
              <h3>{{ block.settings.slide_title }}</h3>
              <p>{{ block.settings.slide_caption }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Slideshow",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "Welcome to our slideshow"
      }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "slide_image",
            "label": "Slide Image"
          }, {
            "type": "text",
            "id": "slide_title",
            "label": "Slide Title",
            "default": "Slide Title"
          }, {
            "type": "textarea",
            "id": "slide_caption",
            "label": "Slide Caption",
            "default": "Slide Caption"
          }
        ]
      }
    ]
  }

{% endschema %}