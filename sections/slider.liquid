<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">


<!-- slideshow-section.liquid -->

<section class="slideshow-section">
  <div class="container">
    <h2>{{ section.settings.section_title }}</h2>
    <div class="slider-box">
      <div class="owl-carousel">
        {% for block in section.blocks %}
          <div class="item">
            <img
              src="{{ block.settings.slide_image | img_url: 'large' }}"
              alt="{{ block.settings.slide_title }}"
              width="100%"
              height="100%">
            <div class="slide-content">
              <h3>{{ block.settings.slide_title }}</h3>
              <p>{{ block.settings.slide_caption }}</p>
            </div>
          </div>
        {% endfor %}
      </div>

    </div>
  </div>
</section>

{{ 'theme.css' | asset_url }}

<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js" defer></script>

<script>
  $(document).ready(function(){
    $('.owl-carousel').owlCarousel({
      loop:true,
      margin:10,
      nav:true,
      autoplay:true,
      autoplayTimeout:5000, // autoplay delay in milliseconds
      responsive:{
          0:{
              items:1
          },
          600:{
              items:3
          },
          1000:{
              items:5
          }
      }
    });
  });
</script>


{% schema %}
  {
    "name": "Slideshow",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "Welcome to our slideshow"
      }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "slide_image",
            "label": "Slide Image"
          }, {
            "type": "text",
            "id": "slide_title",
            "label": "Slide Title",
            "default": "Slide Title"
          }, {
            "type": "textarea",
            "id": "slide_caption",
            "label": "Slide Caption",
            "default": "Slide Caption"
          }
        ]
      }
    ]
  }

{% endschema %}