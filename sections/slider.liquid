<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">


<!-- slideshow-section.liquid -->
<section class="slideshow-section">
  <div class="container">
    <h2>{{ section.settings.section_title }}</h2>
    <div class="slider-box owl-carousel">
      {% for block in section.blocks %}
        <div class="item">
          <img
            src="{{ block.settings.slide_image | img_url: 'large' }}"
            alt="{{ block.settings.slide_title }} "
            width="auto"
            height="auto">
          <div class="slide-content">
            <h3>{{ block.settings.slide_title }}</h3>
            <p>{{ block.settings.slide_caption }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>


<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js" defer></script>

<script>
  var owl = $(".slider-box.owl-carousel");
  owl.owlCarousel({
    items: 1,
    loop: true,
    margin: 10,
    autoplay: true,
    autoplayTimeout: 2000,
    autoplayHoverPause: true,
  });
  
  $(".play").on("click", function () {
    owl.trigger("play.owl.autoplay", [1000]);
  });
  
  $(".stop").on("click", function () {
    owl.trigger("stop.owl.autoplay");
  });
</script>


{% schema %}
  {
    "name": "Slideshow",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "Welcome to our slideshow"
      }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "slide_image",
            "label": "Slide Image"
          }, {
            "type": "text",
            "id": "slide_title",
            "label": "Slide Title",
            "default": "Slide Title"
          }, {
            "type": "textarea",
            "id": "slide_caption",
            "label": "Slide Caption",
            "default": "Slide Caption"
          }
        ]
      }
    ]
  }

{% endschema %}