<!-- slideshow-section.liquid -->
{% comment %} <section class="slideshow-section">
      <div class="container">
        <h2>{{ section.settings.section_title }}</h2>
        <div class="slider-box owl-carousel">
          {% for block in section.blocks %}
            <div class="item">
              <img
                src="{{ block.settings.slide_image | img_url: 'large' }}"
                alt="{{ block.settings.slide_title }} "
                width="auto"
                height="auto">
              <div class="slide-content">
                <h3>{{ block.settings.slide_title }}</h3>
                <p>{{ block.settings.slide_caption }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
</section> {% endcomment %}

<section class="home">
  <div class="home-section">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="text-column">
            <h2>Welcome to Our Store</h2>
            <p>This is some introductory text about our store.</p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="image-column">
            <img
              src="{{ block.settings.image | img_url: 'large' }}"
              alt="{{ block.settings.image }} "
              width="auto"
              height="auto">
          </div>
        </div>
      </div>
    </div>
  </div>

</section>


{% schema %}
  {
    "name": "Home Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Background Image"
      }
    ],
    "presets": [
      {
        "category": "Custom",
        "name": "Home Section"
      }
    ]
  }


{% endschema %}