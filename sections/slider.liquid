<div id="slideshow">
  <div class="wrapper">
    <center>
      <h2>{{ section.settings.heading }}</h2>
    </center>
    <div class="rslides_container">
      <ul class="rslides" id="slider">
        {% for product in collection[section.settings.feature_collection].products %}
          <li class="slideshow-items">
            <a href="{{ product.url }}">
              <img
                src="{{ product.feature_image | image_url: 'medium'}}"
                alt="{{ product.collection name }}"
                width="100%"
                height="100%">
            </a>
            <h3>{{ product.title }}</h3>
            <h4>{{ product.price | money | remove: '.00' }}</h4>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Products Slideshow",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Add your Heading"
      }, {
        "type": "collection",
        "id": "feature_collection",
        "label": "Chose collection to show on slide show"
      }
    ],
    "presets": [
      {
        "name": "Product Slideshow",
        "category": "collections"
      }
    ]
  }

{% endschema %}