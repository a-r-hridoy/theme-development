{% liquid
  assign logo = section.settings.logo
  assign cartIconImg = section.settings.cartIconImg
  assign user_icon = section.settings.user_icon
  assign menu = section.settings.menu
  assign enable_search = section.settings.enable_search_box
%}

<!--
  ==========================
  HEADER START
  ===========================
-->
<header>
  <div class="container container_large">
    <div class="row">
      <div class="col-xl-6 col-md-6 d-none d-md-block">
        <div class="header_left">
          <p>
            <i class="far fa-truck"></i>
            Free Express shipping over $200!
          </p>
        </div>
      </div>
      <div class="col-xl-6 col-md-6">
        <div class="header_right">
          <ul>
            <li>
              <select class="select_js">
                <option value="">English</option>
                <option value="">Japanes</option>
                <option value="">Korean</option>
                <option value="">Urdu</option>
                <option value="">Chines</option>
                <option value="">Arabic</option>
              </select>
            </li>
            <li>
              <select class="select_js">
                <option value="">$ USD</option>
                <option value="">ট BDT</option>
                <option value="">€ EUR</option>
                <option value="">£ GBP</option>
                <option value="">¥ JPY</option>
              </select>
            </li>
            <li>
              <a href="dashboard.html">
                <span>
                  <img
                    src="{{ user_icon | img_url }}"
                    alt="{{ null }}"
                    width="50"
                    height="50"
                ></span>
                My Account
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>
<!--
  ==========================
  HEADER END
  ===========================
-->
<!--
  ==========================
  MENU START
  ===========================
-->
<nav class="navbar navbar-expand-lg main_menu">
  <div class="container container_large">
    <a class="navbar-brand" href="index.html">
      <img
        src="{{ logo | img_url: 'original' }}"
        alt="{{ shop.name }}"
        width="100"
        height="100"
      >
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <i class="fas fa-bars bar_icon"></i>
      <i class="far fa-times close_icon"></i>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          {% for link in linklists['main-menu'].links %}
            <li class="nav-item">
              <a class="nav-link active" href="{{ link.url }}">{{ link.title }}
              <i class="fal fa-plus"></i>
              </a>
              {% if link.links != blank %}
                <ul class="droap_menu">
                  {% for child_link in link.links %}
                    <li>
                      <a class="active"  href="{{ child_link.url }}">{{ child_link.title }}</a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      <ul class="menu_right">
        <li>
          <a class="menu_search">
            <i class="far fa-search"></i>
          </a>
        </li>
        <li>
          <a
            class="menu_cart"
            data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasRight"
            aria-controls="offcanvasRight"
          >
            <i class="far fa-shopping-basket"></i>
            <span class="qnty">15</span>
          </a>
        </li>
        <li>
          <a class="menu_order common_btn" href="menu_03.html">
            <span class="icon">
              <img
                src="{{ cartIconImg | img_url: 'original' }}"
                alt="{{ shop.name }}"
                width="50"
                height="50"
              >
            </span>
            order now
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="menu_search_area">
  <form action="{{ routes.search_url }}">
    <input type="text" name="q" value="{{ search.terms | escape }}" placeholder="Search Item...">
    <button class="common_btn" type="submit">Search</button>
    <span class="close_search"><i class="far fa-times"></i></span>
  </form>
</div>

<!--
  ==========================
      RTL BUTTON START
  ===========================
-->
<a class="rtl_button" href="https://html.themefax.com/restina/html/rtl/index.html">RTL</a>
<!--
  ==========================
      RTL BUTTON END
  ===========================
-->

{% comment %}
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
                        <div class="container-fluid">
                          {% if logo != null %}
                            <img
                              src="{{ logo | img_url }}"
                              alt="{{ shop.name }}"
                              width="100"
                              height="100">

                          {% else %}
                            <a class="navbar-brand" href="#">{{ shop.name }}</a>
                          {%- endif -%}
                          <button
                            class="navbar-toggler"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                          </button>
                          <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                              {% for link in menu.links %}
                                <li class="nav-item {% if link.links.size > 0 %} dropdown {% endif %}">
                                  <a
                                    class="nav-link {% if link.links.size > 0 %}dropdown-toggle dropdown-toggle_{{ forloop.index }}{% endif %}"
                                    href="{{ link.url }}"
                                    {% if link.links.size > 0 %}
                                    role="button"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false"
                                    {% endif %}>
                                    {{ link.title }}
                                  </a>
                                  {% if link.links.size > 0 %}
                                    <ul class="dropdown-menu">
                                      {% for dropLink in link.links %}
                                        <li>
                                          <a class="dropdown-item" href="{{dropLink.url}}">{{ dropLink.title }}</a>
                                        </li>
                                      {% endfor %}
                                    </ul>
                                  {% endif %}
                                </li>
                              {% endfor %}
                            </ul>
                            {% if enable_search %}
                              <form class="d-flex" role="search">
                                <input
                                  class="form-control me-2"
                                  type="search"
                                  placeholder="Search"
                                  aria-label="Search">
                                <button class="btn btn-outline-success" type="submit">Search</button>
                              </form>
                            {% endif %}
                          </div>
                        </div>
  </nav>
{% endcomment %}

{% schema %}
{
  "name": "Header-cTake",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Select logo",
      "info": "Recommnended siz: 100x100px"
    },
    {
      "type": "image_picker",
      "id": "cartIconImg",
      "label": "Select cart img",
      "info": "Recommnended siz: 50x50px"
    },
    {
      "type": "image_picker",
      "id": "user_icon",
      "label": "Select user_icon",
      "info": "Recommnended siz: 50x50px"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Select Menu"
    }, {
      "type": "header",
      "content": "Search bar"
    }, {
      "type": "checkbox",
      "id": "enable_search_box",
      "label": "Enable_search_box",
      "default": true
    }
  ],
  "presets": [
    {
      "category": "Custom",
      "name": "Header-cTake"
    }
  ]
}
{% endschema %}
