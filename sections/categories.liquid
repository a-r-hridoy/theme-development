<section class="category pt_130 xs_pt_90">
  <div class="container">
    <div class="row">
      <div class="col-xl-8 wow fadeInUp">
        <div class="section_heading heading_left mb_50">
          <h2>{{ section.settings.Categories_title }}</h2>
        </div>
      </div>
    </div>
    <div class="row category_slider">
      {% for block in section.blocks %}
        <div class="col-xl-3 wow fadeInUp">
          <a href="{{ block.settings.btn_url }}" class="category_item">
            <img
              src="{{ block.settings.categories_img | img_url: 'large' }}"
              alt="banner"
              width="auto"
              height="auto"
            >
            <h3>{{ block.settings.title }}</h3>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
<!--
  ==========================
      CATEGORY END
  ===========================
-->

{% schema %}
{
  "name": "Categories",
  "settings": [
    {
      "type": "text",
      "id": "Categories_title",
      "label": "Title",
      "default": "Popular category"
    }
  ],
  "blocks": [
    {
      "type":"slider",
      "name": "Slide",
      "settings":[
        {
          "type": "image_picker",
          "id": "categories_img",
          "label": "Categories_img"
        },
         {
          "type": "text",
          "id": "title",
          "label": "Title",
           "default": "Title"
        },
         {
        "type": "url",
      "id": "btn_url",
      "label": "Button link"
    }
      ]

    }
  ],
  "presets":[
    {
      "name": "Categories",
      "category":"Categories"
    }
  ]

}
{% endschema %}
